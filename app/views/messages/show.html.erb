<h1>Your Conversation with <%=  %></h1>

<div class="row">
  <div class="large-12 large-centered columns">
     <table>
       <tr>
         <th><%= current_user.email %></th>
         <th><%= @conversation_partner.email %></th>
         <th>Sent at</th>
         <th></th>
       </tr>

     <% @messages.each do |message| %>
       <tr>
        <td><%= current_user.id == message.sender_id ? message.content : "" %></td>
        <td><%= current_user.id == message.receiver_id ? message.content : "" %></td>
        <td><%= message.created_at %></td>

         <td><%#= link_to 'Show', message_path(@message) %></td>
       </tr>
     <% end %>
     </table>

 <br />